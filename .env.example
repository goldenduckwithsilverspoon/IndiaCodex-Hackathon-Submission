# Example environment configuration for CardanoStream CDN Node

# ==============================
# Node Configuration
# ==============================
PORT=3000
DATA_DIR=./data

# Storage settings
MAX_STORAGE_GB=100
ERASURE_CODING=true

# ==============================
# P2P Network Configuration
# ==============================
# Comma-separated list of bootstrap peers
BOOTSTRAP_PEERS=/ip4/bootstrap1.cardanostream.io/tcp/4001/p2p/12D3...,/ip4/bootstrap2.cardanostream.io/tcp/4001/p2p/12D3...

# Enable local network discovery
ENABLE_MDNS=true

# Enable Kademlia DHT for content routing
ENABLE_DHT=true

# Maximum peer connections
MAX_CONNECTIONS=100

# ==============================
# Cardano Blockchain
# ==============================
# Network: Mainnet, Preprod, or Preview
CARDANO_NETWORK=Preprod

# Blockfrost API key (get from https://blockfrost.io)
BLOCKFROST_API_KEY=preprodXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Your Cardano wallet address (node operator)
OPERATOR_ADDRESS=addr_test1qz...

# Stake amount in lovelace (1000 ADA = 1000000000)
STAKE_AMOUNT=1000000000

# Optional: Wallet seed for automated transactions
# WALLET_SEED=your_24_word_seed_phrase_here

# ==============================
# Performance & Optimization
# ==============================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable compression
ENABLE_COMPRESSION=true

# Cache TTL in seconds
CACHE_TTL=3600

# ==============================
# Security
# ==============================
# Enable rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=*

# ==============================
# Monitoring & Analytics
# ==============================
# Enable Prometheus metrics
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Enable health check endpoint
HEALTH_CHECK_ENABLED=true
